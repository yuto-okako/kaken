<h1>新規登録</h1>
<%= form_for @user do |f| %>
  <p>
    <%= f.label :name, '名前:' %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email, 'メールアドレス:' %>
    <%= f.email_field :email %>
  </p>
  <p>
    <%= f.label :password, 'パスワード:' %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, 'パスワード(確認):' %>
    <%= f.password_field :password_confirmation %>
  </p>
  <%= f.submit '新規登録' %>
<% end %>
<%= link_to 'トップに戻る', root_path %>
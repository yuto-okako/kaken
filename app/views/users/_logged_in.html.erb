<div id="replace">
  <button class="open-modal test" data-target="modal1">ミッション</button>
  <button class="open-modal test" data-target="modal2">立腰</button>
  <br>

  <%= link_to '健康観察', new_temperature_path %>
  <%= link_to '項目チェック', new_check_path %>
  <%= link_to 'ログアウト', logout_path, method: :delete %>
  <%= link_to 'ミニゲーム', games_path, remote: true %>
  <%= link_to '削除', user_path(@user.id), method: :delete %>
  <br>

  <br>
  <h1>体温データ</h1>
  <% @user.temperatures.each do |t| %>
    <p><%= t.date %> : <%= t.taion %>℃ , <%= t.health %></p>
  <% end %>
  <h1>チェックデータ</h1>
  <ul>
  <% @user.checks.each do |c| %>
    <li><%= c.date %> : <%= c.achieve %></li>
  <% end %>
  </ul>

  <div id="modal1" class="modal-area">
    <div class="modal-bg"></div>
    <div class="modal-wrapper">
      <div class="modal-content">
        <ul>
          <li>健康観察をしよう！
            <div id="mission-btn1">
              <%= link_to btn_str(1), {controller: 'missions', action: 'create', number: 1, reward_type: 'point', reward: 1, dayly: true}, method: :post, remote: true, class: "#{'disabled' unless btn_str(1) == 'GET!'}" %>
            </div>
          </li>
          <li>項目チェックをしよう！
            <div id="mission-btn2">
              <%= link_to btn_str(2), {controller: 'missions', action: 'create', number: 2, reward_type: 'point', reward: get_point, dayly: true}, method: :post, remote: true, class: "#{'disabled' unless btn_str(2) == 'GET!'}" %>
            </div>
          </li>
        </ul>
      </div>
      <div class="close-modal">×</div>
    </div>
  </div>
  <div id="modal2" class="modal-area">
    <div class="modal-bg"></div>
    <div class="modal-wrapper">
      <div class="modal-content">
        <h1>ニジューマスク</h1>
        <%= image_tag 'sugi.png' %>
      </div>
      <div class="close-modal">×</div>
    </div>
  </div>
</div>
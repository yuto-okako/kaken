<%= stylesheet_link_tag 'user_form' %>

<h2 class="form-title">ログイン</h2>
<% if @error %> 
  <div class="login-error">メールアドレスまたはパスワードに<br>誤りがあります。</div>
<% end %>
<%= form_for :session, url: login_path, html: {class: 'user_form'} do |f| %>
  <div class="form-item">
    <%= f.text_field :email, placeholder: "メールアドレス", class: 'form-field' %>
  </div>
  <div class="form-item">
    <%= f.password_field :password, placeholder: "パスワード", class: 'form-field' %>
  </div>
  <%= f.submit 'ログイン', class: 'form-btn' %>
<% end %>
<div class="form-footer">
  <%= link_to 'トップに戻る', root_path %>
  <p>はじめての方はこちら</p>
  <%= link_to '新規登録', new_user_path %>
</div>